# Cognitia Deployment Environment Variables
# Copy this file to .env and customize for your environment

# ===================
# PostgreSQL Database
# ===================
POSTGRES_USER=cognitia
POSTGRES_PASSWORD=cognitia
POSTGRES_DB=cognitia
POSTGRES_PORT=5432

# ===================
# Redis Cache
# ===================
REDIS_PORT=6379

# ===================
# API Server
# ===================
API_PORT=8000

# JWT Authentication (CHANGE IN PRODUCTION!)
JWT_SECRET=your-super-secret-key-change-this
JWT_EXPIRE_MINUTES=30

# ===================
# Cognitia Backend
# ===================
# Host running the Cognitia voice processing (TTS/ASR)
# Use 'host.docker.internal' for local development on Docker Desktop
# Use actual IP address for remote servers
GLADOS_BACKEND_HOST=host.docker.internal
GLADOS_BACKEND_PORT=7862
