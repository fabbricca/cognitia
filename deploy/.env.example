# Cognitia Deployment Environment Variables
# Copy this file to .env and customize for your environment

# ===================
# PostgreSQL Database
# ===================
POSTGRES_USER=cognitia
POSTGRES_PASSWORD=cognitia
POSTGRES_DB=cognitia
POSTGRES_PORT=5432

# ===================
# Redis Cache
# ===================
REDIS_PORT=6379

# ===================
# API Server
# ===================
API_PORT=8000

# Auth (JWKS / RS256)
# Point JWKS_URL at your running cognitia-auth service.
JWKS_URL=http://host.docker.internal:8001/.well-known/jwks.json
JWT_ISSUER=http://localhost:8001
JWT_AUDIENCE=cognitia-api

# ===================
# GPU Tier (optional)
# ===================
COGNITIA_CORE_URL=http://host.docker.internal:8080
MEMORY_SERVICE_URL=http://host.docker.internal:8002

# ===================
# LiveKit (optional)
# ===================
LIVEKIT_URL=wss://localhost/livekit
LIVEKIT_API_KEY=
LIVEKIT_API_SECRET=
