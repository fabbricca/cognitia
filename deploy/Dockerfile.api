# Cognitia Entrance Server Dockerfile
# Lightweight API server for authentication, CRUD, and WebSocket proxy
FROM python:3.12-slim

WORKDIR /app

# Create non-root user for security
ARG UID=1000
ARG GID=1000
RUN groupadd -g ${GID} cognitia && \
    useradd -u ${UID} -g cognitia -m -s /bin/bash cognitia

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    libpq-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better layer caching
COPY pyproject.toml README.md ./

# Install Python dependencies for Entrance (no GPU/AI deps)
# v2 additions: alembic, celery, redis, stripe
RUN pip install --no-cache-dir \
    fastapi[standard] \
    uvicorn[standard] \
    sqlalchemy[asyncio] \
    asyncpg \
    psycopg2-binary \
    aiosqlite \
    pydantic \
    PyJWT \
    bcrypt \
    python-multipart \
    aiofiles \
    loguru \
    websockets \
    httpx \
    alembic \
    celery[redis] \
    redis \
    stripe \
    python-dotenv

# Copy source code - only entrance module needed
RUN mkdir -p ./cognitia && echo '"""Cognitia Entrance."""\n__version__ = "0.1.0"' > ./cognitia/__init__.py
COPY src/cognitia/entrance ./cognitia/entrance

# Copy web frontend
COPY web ./web

# Copy Alembic migration files (v2) - Optional for production
# For development, these will be created/mounted dynamically
# (Alembic files will be initialized inside container during development)

# Fix permissions on all copied files and create data directories
# Give cognitia user ownership of /app for development (alembic init, etc.)
RUN chmod -R a+r /app/cognitia /app/web && \
    find /app/cognitia -type d -exec chmod a+rx {} \; && \
    find /app/web -type d -exec chmod a+rx {} \; && \
    mkdir -p /app/data /app/web/avatars && \
    chown -R cognitia:cognitia /app

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Switch to non-root user
USER cognitia

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run the Entrance server
CMD ["python", "-m", "uvicorn", "cognitia.entrance.server:app", "--host", "0.0.0.0", "--port", "8000"]
